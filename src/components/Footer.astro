---
import { readFileSync } from 'fs';
import { join } from 'path';
import yaml from 'js-yaml';

// Load configuration
const configPath = join(process.cwd(), 'config.yaml');
const config = yaml.load(readFileSync(configPath, 'utf8'));

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <img 
            src={config.branding.logo} 
            alt={`${config.site.title} logo`}
            class="h-8 w-auto filter brightness-0 invert"
            width="32"
            height="32"
          />
          <span class="text-xl font-bold">{config.site.title}</span>
        </div>
        <p class="text-gray-300 mb-4 max-w-md">
          {config.site.description}
        </p>
        
        <!-- Contact Info -->
        <div class="space-y-2 text-sm text-gray-300">
          <div class="flex items-center space-x-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>{config.contact.address}</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={`tel:${config.contact.phone}`} class="hover:text-blue-400 transition-colors">
              {config.contact.phone}
            </a>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href={`mailto:${config.contact.email}`} class="hover:text-blue-400 transition-colors">
              {config.contact.email}
            </a>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{config.contact.businessHours}</span>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/" class="text-gray-300 hover:text-blue-400 transition-colors">Home</a>
          </li>
          <li>
            <a href="/about" class="text-gray-300 hover:text-blue-400 transition-colors">About</a>
          </li>
          {config.features.products && (
            <li>
              <a href="/products" class="text-gray-300 hover:text-blue-400 transition-colors">Products</a>
            </li>
          )}
          {config.features.blog && (
            <li>
              <a href="/blog" class="text-gray-300 hover:text-blue-400 transition-colors">Blog</a>
            </li>
          )}
          <li>
            <a href="/contact" class="text-gray-300 hover:text-blue-400 transition-colors">Contact</a>
          </li>
          {config.features.faq && (
            <li>
              <a href="/faq" class="text-gray-300 hover:text-blue-400 transition-colors">FAQ</a>
            </li>
          )}
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Follow Us</h3>
        <div class="flex space-x-4">
          {config.social.facebook && (
            <a 
              href={config.social.facebook} 
              class="text-gray-300 hover:text-blue-400 transition-colors" 
              aria-label="Facebook"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
              </svg>
            </a>
          )}
          {config.social.twitter && (
            <a 
              href={config.social.twitter} 
              class="text-gray-300 hover:text-blue-400 transition-colors" 
              aria-label="Twitter"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
              </svg>
            </a>
          )}
          {config.social.instagram && (
            <a 
              href={config.social.instagram} 
              class="text-gray-300 hover:text-blue-400 transition-colors" 
              aria-label="Instagram"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.328-1.297C4.243 14.814 3.5 13.455 3.5 11.987s.743-2.827 1.621-3.704c.88-.807 2.031-1.297 3.328-1.297 1.297 0 2.448.49 3.328 1.297.878.877 1.621 2.236 1.621 3.704s-.743 2.827-1.621 3.704c-.88.807-2.031 1.297-3.328 1.297z" clip-rule="evenodd" />
              </svg>
            </a>
          )}
          {config.social.linkedin && (
            <a 
              href={config.social.linkedin} 
              class="text-gray-300 hover:text-blue-400 transition-colors" 
              aria-label="LinkedIn"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" clip-rule="evenodd" />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 mt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-400">
      <p>&copy; {currentYear} {config.site.title}. All rights reserved.</p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="/privacy" class="hover:text-blue-400 transition-colors">Privacy Policy</a>
        <a href="/terms" class="hover:text-blue-400 transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer> 